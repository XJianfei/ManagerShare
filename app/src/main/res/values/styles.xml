<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ArticleTextView" >
        <item name="android:textIsSelectable">true</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textScaleX">1.1</item>
        <item name="android:autoLink">all</item>
        <item name="android:shadowDx">@integer/acticle_text_shadow_value</item>
        <item name="android:shadowDy">@integer/acticle_text_shadow_value</item>
        <item name="android:shadowRadius">@integer/acticle_text_shadow_value</item>
        <item name="android:shadowColor">@color/article_shadow_color</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/article_content_size</item>
        <item name="android:scrollbars">vertical</item>
    </style>
</resources>
